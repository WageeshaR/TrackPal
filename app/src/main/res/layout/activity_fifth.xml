<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wageesha.fyp.FifthActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/scrollContDisplay">

        <TextView
            android:id="@+id/viewContDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@android:color/black"/>

    </ScrollView>

    <TextView
        android:id="@+id/viewPitchDisplay"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scrollContDisplay"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/viewPitchDisplay"
        android:layout_marginTop="10dp"
        android:text="START"/>

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/viewPitchDisplay"
        android:layout_toRightOf="@+id/buttonStart"
        android:layout_marginTop="10dp"
        android:text="Stop"/>

</RelativeLayout>
